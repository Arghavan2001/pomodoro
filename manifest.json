{
    "manifest_version": 3,
    "name": "Pomo Notif",
    "version": "1.0",
    "description": "پومو نوتیف: دوستدار زمان تو",
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options/options.html",
    "permissions": ["notifications", "storage","alarms"],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  